{
  "name": "clingo-wasm",
  "version": "0.0.2",
  "description": "Clingo compiled to WebAssembly",
  "source": "index.js",
  "repository": "https://github.com/domoritz/clingo-wasm",
  "author": "Dominik Moritz <domoritz@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "main": "dist/clingo.js",
  "types": "dist/src/index.web.d.ts",
  "scripts": {
    "build:wasm": "scripts/build.sh",
    "build:web": "webpack",
    "build:watch": "webpack --mode development --watch",
    "build:dts": "tsc --emitDeclarationOnly",
    "build": "yarn build:wasm && yarn build:web && yarn build:dts",
    "test": "jest",
    "copy": "cp src/clingo.js src/clingo.wasm examples/js",
    "clean": "rm -rf clingo-* lua-* *.tar.gz clingo.wasm clingo.js",
    "deploy": "yarn copy && gh-pages -d examples",
    "start": "yarn copy && serve examples",
    "start:dev": "serve .",
    "serve": "webpack serve"
  },
  "dependencies": {
    "@types/emscripten": "^1.39.4",
    "comlink": "^4.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "esbuild": "^0.11.5",
    "exports-loader": "^2.0.0",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.6.3",
    "serve": "^11.3.2",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browser": {
    "fs": false,
    "path": false,
    "child_process": false,
    "crypto": false
  }
}
